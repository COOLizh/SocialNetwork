@using(Html.BeginForm())
{
  <title>Sign up</title>
  <div class="form-wrap">
    <div class="profile"><img src="https://html5book.ru/wp-content/uploads/2016/10/profile-image.png">
      <h1>Sign up</h1>
    </div>
    <form>
      <div>
        <label for="name">Name</label>
        <input type="text" name="name" required>
        <label for="name">Surname</label>
        <input type="text" name="surname" required>
      </div>
      <span>Gender</span>
      <div class="control">
        <label class="radio">
          <input type="radio" name="gender">
          Male
        </label>
        <label class="radio">
          <input type="radio" name="gender">
          Female
        </label>
      </div>
      <div>
        <label for="email">E-mail</label>
        <input type="email" name="email" required>
      </div>
      <div>
        <label for="country">Страна</label>
        <select name="country" required>
          <option>Выберите страну проживания</option>
          <option value="Russia">Russia</option> 
          <option value="Ukraine">Ukraine</option> 
          <option value="Belarus">Belarus</option> 
        </select> 
      </div>

      <p><strong>Password:</strong> 
      <input type="password" maxlength="25" size="40" name="password" required></p>

      <p><strong>Confirm password:</strong> 
      <input type="password" maxlength="25" size="40" name="passwordConfirmation" required></p>

      <button type="submit" method="registrate">Sign up</button> 
    </form> 
  </div>
}

